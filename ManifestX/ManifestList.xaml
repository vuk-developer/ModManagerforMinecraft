<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ManifestX.ManifestList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ManifestX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:VXPASerializer.Models"
    mc:Ignorable="d">

    <Grid>

        <StackPanel Orientation="Vertical" 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="16"
                Spacing="12">

            <!-- Accordion Card -->
            <Expander
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="1"
                Width="800">

                <!-- Expander Header -->
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Image Left -->
                        <Image Source="/Assets/static.png"
                           Width="Auto"
                           Height="75"
                           VerticalAlignment="Center"
                           Margin="12,12,24,12"/>

                        <!-- Text Center -->
                        <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="0,12,0,0">
                            <TextBlock Text="{x:Bind Heading, Mode=OneWay}"
                                   FontSize="19"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,2"
                                   x:DefaultBindMode="TwoWay"
                                       />
                            <TextBlock Text="{x:Bind Descripti, Mode=OneWay}"
                                   FontSize="16"
                                   Foreground="Gray"/>
                        </StackPanel>

                        <!-- Checkbox Right -->
                        <CheckBox Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="12,12,12,0"/>
                    </Grid>
                </Expander.Header>

                <!-- Expander Content -->
                <StackPanel Padding="12">
                    <ListView ItemsSource="{Binding Items}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:VMXMod">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{x:Bind _name}" />
                                    <TextBlock Text="{x:Bind _filename}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </Expander>

        </StackPanel>

    </Grid>
</UserControl>
