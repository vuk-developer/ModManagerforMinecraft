<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VukManifestX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VukManifestX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VukManifestX">

    <Grid>
        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Height="48" Background="#1F1F1F" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                <TextBlock Text="VukManifestX" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
            </StackPanel>

            <!-- Drag region (let user drag window here) -->
            <Grid x:Name="DragRegion" Grid.Column="0" />

            <!-- System Caption Buttons -->
            
        </Grid>

        <!-- App Content -->
        <Grid Margin="0,48,0,0" Background="#1F1F1F">
            <NavigationView PaneDisplayMode="Top">
                <NavigationView.MenuItems >
                    <Button x:Name="Btn1" Click="Button_Click_3" Content="Mod Panel">

                    </Button>
                    <Button x:Name="Btn2" Click="Button_Click" Content="Novi Manifest">

                    </Button>
                    <Button Click="Button_Click_1" Content="Otvori" IsEnabled="False">

                    </Button>
                    <Button Click="Button_Click_2" Content="Pokreni">

                    </Button>
                </NavigationView.MenuItems>
                <Grid x:Name="MainPanel">
                    <ScrollViewer>
                        <StackPanel x:Name="CardListPanel" Padding="20" Spacing="10"/>
                    </ScrollViewer>
                    <Frame x:Name="ContentFrame"/>
                </Grid>
            </NavigationView>
        </Grid>
    </Grid>

</Window>
